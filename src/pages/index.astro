---
import "@/styles/globals.css";

import Layout from "@/layouts/base-layout.astro";
import { siteConfig } from "@/config/site";
---

<Layout title={siteConfig.title}>
  <main class="flex-1">
    <section class="flex flex-col justify-center px-6 py-16">
      <header class="flex flex-col gap-1">
        <h1 class="text-4xl text-primary-foreground">
          Hi! I'm <span class="text-primary">{siteConfig.author.name}</span>
        </h1>
        {
          siteConfig.author.description && (
            <h2 class="text-3xl text-secondary">
              {siteConfig.author.description}
            </h2>
          )
        }
      </header>
      {
        siteConfig.author.bio && (
          <p class="pt-8 text-lg">{siteConfig.author.bio}</p>
        )
      }
    </section>
    <section class="flex flex-col justify-center">
      {/** TODO: List of posts */}
    </section>
  </main>
</Layout>
